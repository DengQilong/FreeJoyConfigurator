<UserControl x:Class="FreeJoyConfigurator.AxesConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FreeJoyConfigurator"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="200">

    <UserControl.Resources>
        <local:InvertBooleanConverter  x:Key="boolConvert"/>
        <local:FilterLevelConverter x:Key="filterConverter"/>
    </UserControl.Resources>

    <ItemsControl ItemsSource="{Binding AxesVM.Config.AxisConfig, Mode=OneWay}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
            <DataTemplate DataType="{x:Type local:AxesConfigView}">
                <Border BorderThickness="0.5" BorderBrush="LightGray" Height="100">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MaxWidth="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <CheckBox Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" 
                                  Content="Autocalibration" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center"
                                  IsChecked="{Binding IsAutoCalib}"/>
                        
                        <CheckBox Grid.Column="0" Grid.Row="2"
                                  IsEnabled="{Binding Path=IsAutoCalib, Converter={StaticResource boolConvert}}"
                                  Content="Center" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Right"
                                  IsChecked="{Binding IsCalibCenterUnlocked}"/>


                        <Label Grid.Column="0" Grid.Row="1" Content="Minimum" VerticalAlignment="Stretch" HorizontalContentAlignment="Center"/>

                        <Label Grid.Column="0" Grid.Row="3"  Content="Maximum"  VerticalAlignment="Center" HorizontalContentAlignment="Center"/>

                        <xctk:IntegerUpDown Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,5,0"
                                            IsEnabled="{Binding Path=IsAutoCalib, Converter={StaticResource boolConvert}}"
                                            Value="{Binding CalibMin, UpdateSourceTrigger=LostFocus}"/>
                        <xctk:IntegerUpDown Grid.Column="1" Grid.Row="2"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,5,0"
                                            IsEnabled="{Binding Path=IsAutoCalib, Converter={StaticResource boolConvert}}"
                                            IsReadOnly="{Binding IsCalibCenterUnlocked, Mode=TwoWay, Converter={StaticResource boolConvert}}"
                                            Value="{Binding CalibCenter, UpdateSourceTrigger=LostFocus}"/>
                        <xctk:IntegerUpDown Grid.Column="1" Grid.Row="3"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,5,0"
                                            IsEnabled="{Binding Path=IsAutoCalib, Converter={StaticResource boolConvert}}"
                                            Value="{Binding CalibMax, UpdateSourceTrigger=LostFocus}"/>

                        <Label Grid.Column="2" Grid.Row="0" Content="Smoothing" VerticalAlignment="Center" HorizontalContentAlignment="Right"/>
                        <Slider Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" Orientation="Vertical"
                                HorizontalAlignment="Center" Minimum="0" Maximum="3" IsSnapToTickEnabled="True" TickFrequency="1"
                                Value="{Binding Path=FilterLevel}"/>
                        <Label Grid.Column="2" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                               Content="{Binding Path=FilterLevel, Converter={StaticResource filterConverter}}"/>


                    </Grid>
                </Border>

            </DataTemplate>
        </ItemsControl.ItemTemplate>

    </ItemsControl>
</UserControl>
