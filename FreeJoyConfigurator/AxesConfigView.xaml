<UserControl x:Class="FreeJoyConfigurator.AxesConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FreeJoyConfigurator"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="200">
    
    
    <ItemsControl ItemsSource="{Binding AxesVM.Config.AxisConfig, Mode=OneWay}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
            <DataTemplate DataType="{x:Type local:AxesConfigView}">
                <Border BorderThickness="0.4" BorderBrush="LightGray" Height="100">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <CheckBox Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" 
                                  Content="Autocalibration" 
                                  VerticalAlignment="Bottom" 
                                  HorizontalAlignment="Center" 
                                  IsChecked="{Binding AutoCalib}"/>

                        <Label Grid.Column="0" Grid.Row="1" Content="Minimum" VerticalAlignment="Stretch" HorizontalContentAlignment="Right"/>
                        <Label Grid.Column="0" Grid.Row="2"  Content="Center" VerticalAlignment="Stretch" HorizontalContentAlignment="Right"/>
                        <Label Grid.Column="0" Grid.Row="3"  Content="Maximum"  VerticalAlignment="Stretch" HorizontalContentAlignment="Right"/>

                        <TextBox Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,5,0"
                                         Text="{Binding CalibMin}"/>
                        <TextBox Grid.Column="1" Grid.Row="2"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,5,0"
                                 Text="{Binding CalibCenter}"/>
                        <TextBox Grid.Column="1" Grid.Row="3"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,5,0"
                                 Text="{Binding CalibMax}"/>
                    </Grid>
                </Border>

            </DataTemplate>
        </ItemsControl.ItemTemplate>

    </ItemsControl>
</UserControl>
