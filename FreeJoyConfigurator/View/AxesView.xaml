<UserControl x:Class="FreeJoyConfigurator.AxesView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FreeJoyConfigurator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Border BorderBrush="LightGray" BorderThickness="0.5"
            d:DataContext="{d:DesignInstance {x:Type local:MainVM}}">
        <ItemsControl ItemsSource="{Binding AxesVM.Axes, Mode=OneWay}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type local:AxesView}">
                    <Border BorderThickness="0.5" BorderBrush="LightGray" Height="170">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.5*" />
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
 
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>

                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>


                            <TextBlock Grid.Column="1" Grid.ColumnSpan="2"  Grid.Row="0" Text="Axis source 1"  HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                            <ComboBox Grid.Column="1" Grid.ColumnSpan="2"  Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="5,0,5,0"/>

                            <CheckBox Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" 
                                  Content="Output enabled" 
                                  HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5,0,0,0"
                                  IsChecked="{Binding AxisConfig.IsOutEnabled}"/>

                            <CheckBox Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" 
                                  Content="Inverted" 
                                  HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5,0,0,0"
                                  IsChecked="{Binding AxisConfig.IsInverted}"/>
                            
                            
                            <ComboBox Grid.Column="3"   Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="5,0,5,0"/>
                            
                            <TextBlock Grid.Column="4" Grid.ColumnSpan="2" Grid.Row="0" Text="Axis source 2"  HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                            <ComboBox Grid.Column="4" Grid.ColumnSpan="2" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="5,0,5,0"/>

                            <TextBlock Grid.Column="2" Grid.Row="2" Text="Decrement"  HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                            <ComboBox Grid.Column="2" Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="5,0,5,0"/>
                            
                            <TextBlock Grid.Column="3" Grid.Row="2" Text="Center"  HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                            <ComboBox Grid.Column="3" Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="5,0,5,0"/>

                            <TextBlock Grid.Column="4" Grid.Row="2" Text="Increment"  HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                            <ComboBox Grid.Column="4" Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="5,0,5,0"/>

                            <TextBlock Grid.Column="5" Grid.Row="2" Text="Step"  HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                            <ComboBox Grid.Column="5" Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="5,0,5,0"/>
                            
                            
                            <!--###################################################################################-->


                            <TextBlock Grid.Column="0" Grid.Row="0"  Text="{Binding Number}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <Label Grid.Column="0" Grid.Row="4"  Content="Out" VerticalAlignment="Bottom" HorizontalContentAlignment="Stretch"/>
                            <Label Grid.Column="0" Grid.Row="5"  Content="Raw" VerticalAlignment="Top" VerticalContentAlignment="Top" HorizontalContentAlignment="Stretch"/>


                            <ProgressBar Grid.Column="1" Grid.ColumnSpan="5"
                                                 Grid.Row="4" 
                                                 Grid.RowSpan="1"
                                                 Minimum="-32767"  
                                                 Maximum="32767" 
                                                 Height="30"  
                                                 Value="{Binding Path=Value, Mode=OneWay}" 
                                                 IsEnabled="{Binding IsEnabled}"
                                                 HorizontalAlignment="Stretch"  
                                                 VerticalAlignment="Bottom" 
                                                 Foreground="DarkRed" Margin="0,0,10,0" >
                                <ProgressBar.Style>
                                    <Style TargetType="ProgressBar">
                                        <Style.Triggers>
                                            <Trigger Property="IsEnabled" Value="false">
                                                <Setter Property="Opacity" Value="0.3"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ProgressBar.Style>
                            </ProgressBar>
                            <Label Grid.Column="1" Grid.ColumnSpan="5" Grid.Row="4" Height="30" Content="{Binding Value}"
                                   IsEnabled="{Binding IsEnabled}"
                                   HorizontalAlignment="Center" VerticalAlignment="Bottom" VerticalContentAlignment="Center">

                                <Label.Style>
                                    <Style TargetType="Label">
                                        <Style.Triggers>
                                            <Trigger Property="IsEnabled" Value="false">
                                                <Setter Property="Visibility" Value="Hidden"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Label.Style>
                            </Label>
                            
                            <ProgressBar Grid.Column="1" Grid.ColumnSpan="5"
                                                 Grid.Row="5" 
                                                 Minimum="-32767" 
                                                 Maximum="32767" 
                                                 Height="20"
                                                 Value="{Binding Path=RawValue, Mode=OneWay}"
                                                 IsEnabled="{Binding IsEnabled}"
                                                 HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Top"
                                                 Foreground="DarkOliveGreen" Margin="0,0,10,0" >
                                <ProgressBar.Style>
                                    <Style TargetType="ProgressBar">
                                        <Style.Triggers>
                                            <Trigger Property="IsEnabled" Value="false">
                                                <Setter Property="Opacity" Value="0.3"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ProgressBar.Style>
                            </ProgressBar>
                            <TextBlock Grid.Column="1" Grid.ColumnSpan="5" Grid.Row="5" Height="20" 
                                       Text="{Binding RawValue}"
                                       IsEnabled="{Binding IsEnabled}"
                                       HorizontalAlignment="Center" VerticalAlignment="Top" >
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <Trigger Property="IsEnabled" Value="false">
                                                <Setter Property="Visibility" Value="Hidden"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                        </Grid>
                    </Border>

                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Border>


</UserControl>


