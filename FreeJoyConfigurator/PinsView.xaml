        <ComboBox Grid.Column="4" Grid.Row="5" HorizontalContentAlignment="Center"
                  ItemsSource="{Binding Source={StaticResource dataFromEnum}}" 
                  SelectedItem="{Binding PinsVM.Config.PinConfig[21], Mode=TwoWay}"/>
        <ComboBox Grid.Column="4" Grid.Row="6" HorizontalContentAlignment="Center"
                  ItemsSource="{Binding Source={StaticResource dataFromEnum}}" 
                  SelectedItem="{Binding PinsVM.Config.PinConfig[13], Mode=TwoWay}"/>
