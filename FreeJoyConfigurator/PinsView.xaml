        <Label Grid.Column="3" Grid.Row="14" HorizontalContentAlignment="Left" Content="A1"/>
        <Label Grid.Column="3" Grid.Row="15" HorizontalContentAlignment="Left" Content="A0"/>
        <Label Grid.Column="3" Grid.Row="16" HorizontalContentAlignment="Left" Content="C15"/>
        <Label Grid.Column="3" Grid.Row="17" HorizontalContentAlignment="Left" Content="C14"/>
        <Label Grid.Column="3" Grid.Row="18" HorizontalContentAlignment="Left" Content="C13"/>
