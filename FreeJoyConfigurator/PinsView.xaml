                  SelectedItem="{Binding PinsVM.Config.PinConfig[9], Mode=TwoWay}"/>
        <ComboBox Grid.Column="0" Grid.Row="6" HorizontalContentAlignment="Center"
                  ItemsSource="{Binding Source={StaticResource dataFromEnum}}" 
                  SelectedItem="{Binding PinsVM.Config.PinConfig[10], Mode=TwoWay}"/>
        <Button Grid.Column="0" Grid.Row="7" Content="USB_D-" IsEnabled="False"/>
        <Button Grid.Column="0" Grid.Row="8" Content="USB_D+" IsEnabled="False"/>
        <ComboBox Grid.Column="0" Grid.Row="9" HorizontalContentAlignment="Center"
                  ItemsSource="{Binding Source={StaticResource dataFromEnum}}" 
                  SelectedItem="{Binding PinsVM.Config.PinConfig[11], Mode=TwoWay}"/>
        <ComboBox Grid.Column="0" Grid.Row="10" HorizontalContentAlignment="Center"
                  ItemsSource="{Binding Source={StaticResource dataFromEnum}}" 
                  SelectedItem="{Binding PinsVM.Config.PinConfig[14], Mode=TwoWay}"/>
        <ComboBox Grid.Column="0" Grid.Row="11" HorizontalContentAlignment="Center"
