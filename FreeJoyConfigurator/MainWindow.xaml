<Window x:Class="FreeJoyConfigurator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FreeJoyConfigurator"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="FreeJoy Configurator Utility v0.01" MinHeight="630" Height="630" MinWidth="960" Width="960">

    <Window.Resources>
        <local:ConfiguratorViewModel x:Key="ConfiguratorVM"/>
        <ResourceDictionary x:Key="Dictionary" Source="Dictionary.xaml"/>
    </Window.Resources>

    <!--<Window.DataContext>
        <local:ConfiguratorViewModel/>
    </Window.DataContext>-->

    <Grid Width="Auto" Height="Auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="50"/>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="*" MinWidth="50"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="0.3*" />
        </Grid.RowDefinitions>

        <!--Row 0-->
        <GroupBox Header="Device" Name ="Status_GroupBox" Grid.Column="0" Grid.Row="0" Margin="10,10,10,10" Grid.ColumnSpan="1">
            <Grid Width="Auto" Height="Auto">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--Row 0-->
                <ComboBox Name="Devices_ComboBox" Grid.Row="0"   
                    Text="Devices" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10" Width="146" Height="59">

                </ComboBox>

                <!--Row 1-->
                <TextBlock Name="ConnectionStatus_TextBlock" Grid.Row="1"  TextAlignment="Center" 
                    Text="{Binding ConnectionStatusVM, Source={StaticResource ConfiguratorVM}}"  VerticalAlignment="Center" HorizontalAlignment="Center" Height="19" Width="125"/>

                <!--Row 3-->
                <Button Name="Button_ReadConfig" Grid.Row="3"  Content="Read Config from Device"
                        IsEnabled="{Binding IsConnectedVM, Source={StaticResource ConfiguratorVM}}"
                        Command="{Binding ReadConfigButton_Click, Source={StaticResource ConfiguratorVM}}" Background="White" Margin="10,6,10,5">
                </Button>

                <!--Row 4-->
                <Button Name="Button_WriteConfig" Grid.Row="4"  Content="Write Config to Device"
                        IsEnabled="{Binding IsConnectedVM, Source={StaticResource ConfiguratorVM}}"
                        Command="{Binding WriteConfigButton_Click, Source={StaticResource ConfiguratorVM}}" Background="White" Margin="10,6,10,5">
                </Button>

                <!--Row 5-->

                <!--Row 6-->
                <Button Name="Button_SetDefaultConfig" Grid.Row="6"  Content="Set Default Config"
                        Command="{Binding WriteConfigButton_Click, Source={StaticResource ConfiguratorVM}}" Background="White" Margin="10,6,10,5">
                </Button>

                <!--Row 7-->
                <Button Name="Button_LoadFileConfig" Grid.Row="7"  Content="Load Config form File"
                        Command="{Binding WriteConfigButton_Click, Source={StaticResource ConfiguratorVM}}" Background="White" Margin="10,6,10,5">
                </Button>

                <!--Row 8-->
                <Button Name="Button_SaveFIleConfig" Grid.Row="8"  Content="Save Config to File"
                        Command="{Binding WriteConfigButton_Click, Source={StaticResource ConfiguratorVM}}" Background="White" Margin="10,6,10,5">
                </Button>

                <!--Row 9-->
                <Button Name="Button_ResetPins" Grid.Row="10"  Content="Reset All Pins"
                        Command="{Binding WriteConfigButton_Click, Source={StaticResource ConfiguratorVM}}" Background="White" Margin="10,6,10,5">
                </Button>
            </Grid>
        </GroupBox>

        <TabControl Grid.Column="1" Margin="10" >
            <!--<TabItem Header="Pin Config">

            </TabItem>-->
            <TabItem Header="Axis Config">

                <ItemsControl ItemsSource="{Binding AxisCollectionVM, Source={StaticResource ConfiguratorVM}, Mode=TwoWay}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type local:AxisVM}">
                            <GroupBox>
                                <StackPanel Margin="0,10,0,0">
                                    <ProgressBar Minimum="0"  Maximum="4095" Height="15" Width="Auto" Margin="10,0,100,0" 
                                                 Value="{Binding Path=Value, Mode=OneWay}" />
                                    <ProgressBar Minimum="0" Maximum="4095" Height="6" Width="Auto" Margin="10,0,100,20"/>
                                </StackPanel>
                            </GroupBox>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            
            </TabItem>


            <TabItem Header="Button Config">

                <ItemsControl ItemsSource="{Binding ButtonCollectonVM, Source={StaticResource ConfiguratorVM}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button MinWidth="40" MinHeight="40" >
                                <Button.ContextMenu>
                                    <ContextMenu Name="ButtonContextMenu">
                                        <MenuItem Header="Buttons" >
                                            <MenuItem Header="Normal Button" IsCheckable="True"/>
                                            <MenuItem Header="Inverted Button" IsCheckable="True"/>
                                            <MenuItem Header="Toggle Switch ON/OFF" IsCheckable="True"/>
                                            <MenuItem Header="Toggle Switch ON" IsCheckable="True"/>
                                            <MenuItem Header="Toggle Switch OFF" IsCheckable="True"/>
                                        </MenuItem>
                                        <MenuItem Header="POV1">
                                            <MenuItem Header="POV Up"/>
                                            <MenuItem Header="POV Right"/>
                                            <MenuItem Header="POV Down"/>
                                            <MenuItem Header="POV Left"/>
                                        </MenuItem>
                                    </ContextMenu>
                                </Button.ContextMenu>
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Click">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ButtonContextMenu" Storyboard.TargetProperty="(ContextMenu.IsOpen)">
                                                    <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                                        <DiscreteObjectKeyFrame.Value>
                                                            <sys:Boolean>True</sys:Boolean>
                                                        </DiscreteObjectKeyFrame.Value>
                                                    </DiscreteObjectKeyFrame>
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </TabItem>
        </TabControl>

        <Grid Grid.Column="2" Margin="0,20,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="7*" />
            </Grid.RowDefinitions>

            <ComboBox Name="Language_ComboBox" Grid.Row="0"   
                    Text="Language" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="43,10,41,27" Width="155" Height="25" >
            </ComboBox>

            <GroupBox Header="Current Config" Name ="Info_GroupBox" Grid.Row="1" Grid.ColumnSpan="3" Margin="10,10,10,10">

            </GroupBox>
        </Grid>



        <!--Row 1-->

        <GroupBox Header="Log" Name ="Log_GroupBox" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Margin="10,10,10,10">
            <ScrollViewer Name="ActivityLogScrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <TextBox Name="ActivityLogging_TextBox" TextChanged="ActivityLogTextChangedHandler" IsEnabled="True" Background="WhiteSmoke" Margin="10,10,10,10" 
                Text="{Binding ActivityLogVM, Mode=OneWay, Source={StaticResource ConfiguratorVM}}"/>
            </ScrollViewer>
        </GroupBox>
    </Grid>

</Window>
